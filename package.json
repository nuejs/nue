{
  "name": "nue",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "bun": ">=1.2",
    "node": ">=20.8"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand"
  },
  "devDependencies": {
    "esbuild": "^0.25.2",
    "lightningcss": "^1.29"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/packages/*/src/**"
    ]
  }
}
